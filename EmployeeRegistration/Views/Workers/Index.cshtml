@model IEnumerable<EmployeeRegistration.Workers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <div>
                    <img src="@Html.DisplayFor(modelItem => item.PicturePath.PicturePath)" class="d-block w-100">
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.Date)
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.LastName)
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.Email)
                </div>
            </td>
            <td>
                <div class="align-items-center d-flex">
                    @Html.DisplayFor(modelItem => item.Salary)
                </div>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
